<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:HankSays.ViewModels"
             x:Class="HankSays.Views.StartView"
             x:Name="Root">
    
    <ContentPage.Content>
        <StackLayout>

            <Label Text="Hank Says" FontSize="36" VerticalOptions="CenterAndExpand" TextColor="Black"
                   HorizontalOptions="Center" HorizontalTextAlignment="Center" />
            <Switch x:Name="styleSwitch" 
                   IsToggled="{Binding MainViewModel.DarkMode, Mode=TwoWay}" />
            <StackLayout.Triggers>
                <DataTrigger TargetType="Layout"
                             Binding="{Binding Source={x:Reference styleSwitch}, Path=IsToggled}"
                             Value="true">
                    <Setter Property="BackgroundColor"
                            Value="Gray"/>
                   
                </DataTrigger>
            </StackLayout.Triggers>

            <Image Source="resize8" />
            <Button Text="Start" FontSize="24" TextColor="Black" HorizontalOptions="CenterAndExpand"
                    Command="{Binding LaunchGamePlayCommand}"/>
            </StackLayout>
        
    </ContentPage.Content>
</ContentPage>